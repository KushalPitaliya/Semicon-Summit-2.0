# ===========================================
# Semiconductor Summit 2.0 - Environment Config
# Copy this file to .env and fill in your values
# ===========================================

# MongoDB Atlas Connection (Production)
# Get your connection string from MongoDB Atlas dashboard
MONGODB_URI=mongodb+srv://<username>:<password>@<cluster>.mongodb.net/semiconductor_summit?retryWrites=true&w=majority

# Server Configuration
PORT=3001
NODE_ENV=production
LOG_LEVEL=info

# JWT Secret (CHANGE THIS IN PRODUCTION!)
# Generate a strong random string: openssl rand -base64 32
# CRITICAL: Must be set in production environment
JWT_SECRET=your_super_secret_jwt_key_change_this

# JWT Expiration
JWT_EXPIRES_IN=7d

# CORS Origin (your frontend URL)
CORS_ORIGIN=http://localhost:5173

# ===========================================
# Cloudinary Configuration (for Gallery)
# Sign up at https://cloudinary.com
# ===========================================
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# ===========================================
# Email Configuration (Gmail with App Password)
# ===========================================
# 1. Enable 2-Factor Authentication on your Gmail
# 2. Go to: https://myaccount.google.com/apppasswords
# 3. Create an App Password and use it below
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-16-character-app-password

# Frontend URL (for email links)
FRONTEND_URL=http://localhost:5173

# ===========================================
# Razorpay Configuration
# ===========================================
# Webhook secret from Razorpay Dashboard > Settings > Webhooks
# Optional but recommended for security
RAZORPAY_WEBHOOK_SECRET=your_razorpay_webhook_secret

# Registration Fee (in INR)
REGISTRATION_FEE=400

# File Upload Path (for local development)
UPLOAD_PATH=./uploads
